{namespace coleslaw.theme.hyde}
{template index}
<link href="/css/index.css" rel="stylesheet" type="text/css"/>
<link href="/css/font.css" rel="stylesheet" type="text/css"/>
<div class="article-meta-meta">
{foreach $obj in $index.content}
<div class="article-meta">
<a href="{$config.domain}/{$obj.url}">
    <div class="article-box">
      {if $obj.image}
      <div class="article-image">
          <img src="{$obj.image}" alt="Article image.">
      </div>
      {/if}
      <div class="article-title" href="{$config.domain}/{$obj.url}"><h1>{$obj.title}</h1>
      <div class="article">{$obj.excerpt |noAutoescape}
      </div>
      </div>
    </div>
    </a>
</div>
{/foreach}
</div>
<div id="relative-nav">
  {if $prev} <a href="{$config.domain}/{$prev.url}">Previous</a> {/if}
  {if $next} <a href="{$config.domain}/{$next.url}">Next</a> {/if}
</div>
{if $tags}
<div id="tagsoup">
  <p>View by type: 
    {foreach $tag in $tags}
      <a href="{$config.domain}/{$tag.url}">{$tag.name}</a>{nil}
    {/foreach}
</div>
{/if}

{/template}
